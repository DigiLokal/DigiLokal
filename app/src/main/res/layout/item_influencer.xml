<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_influencer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="0dp">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/image_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_influencer"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/influencer_1"
                tools:srcCompat="@drawable/influencer_1" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/ig_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="1.5K"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/ic_instagram"
            app:layout_constraintTop_toTopOf="@+id/ic_instagram" />

        <TextView
            android:id="@+id/tw_follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="0.9K"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/ic_twitter"
            app:layout_constraintTop_toTopOf="@+id/ic_twitter" />


        <ImageView
            android:id="@+id/ic_tiktok"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_layout"
            app:layout_constraintTop_toBottomOf="@+id/field_area"
            app:srcCompat="@drawable/ic_tiktok" />

        <ImageView
            android:id="@+id/ic_instagram"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/tt_follower"
            app:layout_constraintTop_toTopOf="@+id/ic_tiktok"
            app:srcCompat="@drawable/ic_instagram" />

        <ImageView
            android:id="@+id/ic_twitter"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@+id/ig_follower"
            app:layout_constraintTop_toTopOf="@+id/ic_instagram"
            app:srcCompat="@drawable/ic_twitter" />

        <TextView
            android:id="@+id/tt_follower"
            android:layout_width="18dp"
            android:layout_height="15dp"
            android:layout_marginStart="4dp"
            android:text="11K"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/ic_tiktok"
            app:layout_constraintTop_toTopOf="@+id/ic_tiktok" />

        <TextView
            android:id="@+id/influencer_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="\u0040danuartmd"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/image_layout"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Bekasi"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/influencer_username"
            app:layout_constraintTop_toBottomOf="@+id/influencer_username" />

        <TextView
            android:id="@+id/field_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/montserrat_semibold"
            android:padding="4dp"
            android:text="Clothing"
            android:textColor="@color/dilo_blue"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/city"
            app:layout_constraintTop_toBottomOf="@+id/city" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>